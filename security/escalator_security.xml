<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Category for Escalator Groups -->
    <record model="ir.module.category" id="module_category_escalator_management">
        <field name="name">Escalator</field>
        <field name="description">Helps you manage your support requests and escalations</field>
        <field name="sequence">14</field>
    </record>

    <!-- Base User Group -->
    <record id="group_escalator_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_escalator_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <!-- Manager Group -->
    <record id="group_escalator_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_escalator_management"/>
        <field name="implied_ids" eval="[(4, ref('group_escalator_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <!-- Security Rules -->
    <data noupdate="1">
        <!-- Multi-company Rules -->
        <record id="escalator_company_rule" model="ir.rule">
            <field name="name">Escalator: Multi-Company</field>
            <field name="model_id" ref="model_escalator_ticket"/>
            <field name="global" eval="True"/>
            <field name="domain_force">
                ['|', ('company_id', '=', False),
                      '|', ('company_id', 'child_of', [user.company_id.id]),
                           ('company_id', 'child_of', user.company_ids.ids)]
            </field>
        </record>

        <!-- Ticket Rules -->
        <record id="ticket_manager_rule" model="ir.rule">
            <field name="name">Escalator: Manager Access</field>
            <field name="model_id" ref="model_escalator_ticket"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('escalator.group_escalator_manager'))]"/>
        </record>

        <record id="ticket_user_rule" model="ir.rule">
            <field name="name">Escalator: User Access</field>
            <field name="model_id" ref="model_escalator_ticket"/>
            <field name="domain_force">
                ['|', ('user_id', '=', user.id),
                      ('team_id.member_ids', 'in', [user.id])]
            </field>
            <field name="groups" eval="[(4, ref('escalator.group_escalator_user'))]"/>
        </record>

        <record id="ticket_portal_rule" model="ir.rule">
            <field name="name">escalator: portal users: (portal and (following project or following tickets)</field>
            <field name="model_id" ref="model_escalator_lite_ticket"/>
            <field name="domain_force">[
                        ('message_partner_ids', 'child_of', [user.partner_id.commercial_partner_id.id]),
                ]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        </record>

    </data>
</odoo>
